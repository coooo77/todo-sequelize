<!-- ./views/edit.handlebars -->
<form action="/todos/{{{todo.id}}}{{{data.id}}}?_method=PUT" method="POST">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done }} checked{{/if}} {{#if data.done }} checked{{/if}} />
      </div>
    </div>
    <input type="text" placeholder="name" name="name" {{#if todo.name }} value="{{{todo.name}}}" {{/if}}
      {{#if data.name }} value=" {{{data.name}}}" {{/if}} class="form-control">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">Edit</button>
    </div>
  </div>
</form>
{{> messages}}